<Window x:Class="WpfApp.Views.PedidoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pedidos" Height="600" Width="900">

    <Grid Margin="10">
        <StackPanel>
            <!-- Informações da Pessoa -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Pessoa:" FontWeight="Bold" Width="80"/>
                <Label x:Name="lblPessoa" Content="" Width="300"/>
            </StackPanel>

            <!-- Seleção de Produto -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <ComboBox x:Name="cbProdutos" Width="200" Margin="5" DisplayMemberPath="Nome"/>
                <TextBox x:Name="txtQuantidade" Width="80" Margin="5" ToolTip="Quantidade"/>
                <Button Content="Adicionar Produto" Width="120" Margin="5" Click="BtnAdicionarProduto_Click"/>
            </StackPanel>

            <!-- Grid de Produtos do Pedido -->
            <DataGrid x:Name="dgItensPedido" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Produto" Binding="{Binding NomeProduto}" Width="*"/>
                    <DataGridTextColumn Header="Valor Unit." Binding="{Binding ValorUnitario, StringFormat=C}" Width="*"/>
                    <DataGridTextColumn Header="Quantidade" Binding="{Binding Quantidade}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Botão Remover Item -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Remover Item" Width="100" Margin="5" Click="BtnRemoverItem_Click"/>
            </StackPanel>

            <!-- Forma de Pagamento e Total -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Forma Pagamento:" FontWeight="Bold" Width="120"/>
                <ComboBox x:Name="cbFormaPagamento" Width="150" Margin="5">
                    <ComboBoxItem Content="Dinheiro"/>
                    <ComboBoxItem Content="Cartão"/>
                    <ComboBoxItem Content="Boleto"/>
                </ComboBox>
                <Label Content="Total:" FontWeight="Bold" Width="50" Margin="20,0,0,0"/>
                <Label x:Name="lblTotal" Content="R$ 0,00" FontWeight="Bold" Width="100"/>
            </StackPanel>

            <!-- Botões Finais -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="← Voltar" Width="80" Margin="5" Click="BtnVoltar_Click" Background="LightGray"/>
                <Button Content="Finalizar Pedido" Width="120" Margin="5" Click="BtnFinalizarPedido_Click"/>
                <Button Content="Cancelar" Width="80" Margin="5" Click="BtnCancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
