<Page x:Class="WpfApp.Views.ProdutoBuscar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProdutoBuscar">

    <Grid>
        <!-- Filtro por Nome -->
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="Nome:" Width="50"/>
            <TextBox Width="200" Text="{Binding FiltroNome}" />
        </StackPanel>

        <!-- Filtro por Código -->
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="Código:" Width="50"/>
            <TextBox Width="200" Text="{Binding FiltroCodigo}" />
        </StackPanel>

        <!-- Filtro por Faixa de Valor -->
        <StackPanel Orientation="Horizontal" Margin="0,2">
            <TextBlock Text="Valor entre:" Width="70"/>
            <TextBox Width="80" Text="{Binding FiltroValorMin}" />
            <TextBlock Text=" e " VerticalAlignment="Center"/>
            <TextBox Width="80" Text="{Binding FiltroValorMax}" />
        </StackPanel>

        <!-- Botão para aplicar filtro -->
        <Button Content="Filtrar" Command="{Binding FiltrarCommand}" Width="100" Margin="0,5"/>
    </Grid>
</Page>
