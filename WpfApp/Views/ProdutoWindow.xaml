<Window x:Class="WpfApp.Views.ProdutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produtos" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <!-- Campos -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBox x:Name="txtNome" Width="150" Margin="5" ToolTip="Nome"/>
                <TextBox x:Name="txtCodigo" Width="100" Margin="5" ToolTip="Código"/>
                <TextBox x:Name="txtValor" Width="100" Margin="5" ToolTip="Valor"/>
            </StackPanel>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Incluir" Width="80" Margin="5" Click="BtnIncluir_Click"/>
                <Button Content="Editar" Width="80" Margin="5" Click="BtnEditar_Click"/>
                <Button Content="Salvar" Width="80" Margin="5" Click="BtnSalvar_Click"/>
                <Button Content="Excluir" Width="80" Margin="5" Click="BtnExcluir_Click"/>
            </StackPanel>

            <!-- Grid -->
            <DataGrid x:Name="dgProdutos" AutoGenerateColumns="False" Height="300" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="*"/>
                    <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
