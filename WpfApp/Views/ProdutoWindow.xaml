<Window x:Class="WpfApp.Views.ProdutoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produtos" Height="350" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Cadastro de Produtos" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

            <TextBlock Text="Nome:"/>
            <TextBox Text="{Binding Nome}" Margin="0,2"/>

            <TextBlock Text="Código:"/>
            <TextBox Text="{Binding Codigo}" Margin="0,2"/>

            <TextBlock Text="Valor:"/>
            <TextBox Text="{Binding Valor}" Margin="0,2"/>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <Button Content="Salvar" Width="80" Command="{Binding SalvarCommand}" Margin="0,0,5,0"/>
                <Button Content="Excluir" Width="80" Command="{Binding ExcluirCommand}"/>
            </StackPanel>

            <TextBlock Text="Produtos cadastrados:" FontWeight="Bold" Margin="0,10,0,2"/>
            <ListBox ItemsSource="{Binding Produtos}" DisplayMemberPath="Nome" Height="100"/>
        </StackPanel>
    </Grid>
</Window>
