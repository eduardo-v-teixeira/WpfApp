<Window x:Class="WpfApp.Views.ProdutoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produtos" Height="450" Width="800">

    <Grid Margin="10">
        <StackPanel>
            <!-- Filtros -->
            <GroupBox Header="Filtros" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Nome:" Width="50"/>
                    <TextBox x:Name="txtFiltroNome" Width="120" Margin="5" TextChanged="FiltroChanged"/>
                    <Label Content="Código:" Width="60"/>
                    <TextBox x:Name="txtFiltroCodigo" Width="100" Margin="5" TextChanged="FiltroChanged"/>
                    <Label Content="Valor Min:" Width="70"/>
                    <TextBox x:Name="txtFiltroValorMin" Width="80" Margin="5" TextChanged="FiltroChanged"/>
                    <Label Content="Valor Max:" Width="70"/>
                    <TextBox x:Name="txtFiltroValorMax" Width="80" Margin="5" TextChanged="FiltroChanged"/>
                    <Button Content="Limpar" Width="80" Margin="5" Click="BtnLimparFiltros_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Cadastro -->
            <GroupBox Header="Cadastro" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Nome:" Width="50"/>
                    <TextBox x:Name="txtNome" Width="150" Margin="5"/>
                    <Label Content="Código:" Width="60"/>
                    <TextBox x:Name="txtCodigo" Width="100" Margin="5"/>
                    <Label Content="Valor:" Width="50"/>
                    <TextBox x:Name="txtValor" Width="100" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="← Voltar" Width="80" Margin="5" Click="BtnVoltar_Click" Background="LightGray"/>
                <Button Content="Incluir" Width="80" Margin="5" Click="BtnIncluir_Click"/>
                <Button Content="Editar" Width="80" Margin="5" Click="BtnEditar_Click"/>
                <Button Content="Salvar" Width="80" Margin="5" Click="BtnSalvar_Click"/>
                <Button Content="Excluir" Width="80" Margin="5" Click="BtnExcluir_Click"/>
            </StackPanel>

            <!-- Grid -->
            <DataGrid x:Name="dgProdutos" AutoGenerateColumns="False" Height="300" Margin="0,0,0,10" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="*"/>
                    <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
