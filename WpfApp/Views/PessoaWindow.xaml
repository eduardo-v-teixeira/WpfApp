<Window x:Class="WpfApp.Views.PessoaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Pessoas" Height="800" Width="900">

    <Grid Margin="10">
        <StackPanel>
            <!-- Filtros -->
            <GroupBox Header="Filtros" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Nome:" Width="50"/>
                    <TextBox x:Name="txtFiltroNome" Width="150" Margin="5" TextChanged="FiltroChanged"/>
                    <Label Content="CPF:" Width="40"/>
                    <TextBox x:Name="txtFiltroCPF" Width="120" Margin="5" TextChanged="FiltroChanged"/>
                    <Button Content="Limpar Filtros" Width="100" Margin="5" Click="BtnLimparFiltros_Click"/>
                </StackPanel>
            </GroupBox>

            <!-- Cadastro -->
            <GroupBox Header="Cadastro" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <Label Content="Nome:" Width="50"/>
                    <TextBox x:Name="txtNome" Width="200" Margin="5"/>
                    <Label Content="CPF:" Width="40"/>
                    <TextBox x:Name="txtCPF" Width="150" Margin="5"/>
                    <Label Content="Endereço:" Width="70"/>
                    <TextBox x:Name="txtEndereco" Width="250" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Botões -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="← Voltar" Width="80" Margin="5" Click="BtnVoltar_Click" Background="LightGray"/>
                <Button Content="Incluir" Width="80" Margin="5" Click="BtnIncluir_Click"/>
                <Button Content="Editar" Width="80" Margin="5" Click="BtnEditar_Click"/>
                <Button Content="Salvar" Width="80" Margin="5" Click="BtnSalvar_Click"/>
                <Button Content="Excluir" Width="80" Margin="5" Click="BtnExcluir_Click"/>
                <Button Content="Incluir Pedido" Width="100" Margin="5" Click="BtnIncluirPedido_Click"/>
            </StackPanel>

            <!-- Grid de Pessoas -->
            <DataGrid x:Name="dgPessoas" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10" 
                      SelectionChanged="DgPessoas_SelectionChanged" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto"/>
                    <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTextColumn Header="CPF" Binding="{Binding CPF}" Width="*"/>
                    <DataGridTextColumn Header="Endereço" Binding="{Binding Endereco}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Grid de Pedidos da Pessoa -->
            <Label Content="Pedidos da Pessoa Selecionada:" FontWeight="Bold"/>
            <DataGrid x:Name="dgPedidos" AutoGenerateColumns="False" Height="200" Margin="0,0,0,10" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data Venda" Binding="{Binding DataVenda, StringFormat=dd/MM/yyyy}" Width="*"/>
                    <DataGridTextColumn Header="Valor Total" Binding="{Binding ValorTotal, StringFormat=C}" Width="*"/>
                    <DataGridTextColumn Header="Forma Pagamento" Binding="{Binding FormaPagamento}" Width="*"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Filtros de Pedidos -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Label Content="Filtrar Pedidos:" FontWeight="Bold" Width="100"/>
                <Button Content="Todos" Width="80" Margin="5" Click="BtnFiltroTodos_Click"/>
                <Button Content="Pendentes" Width="80" Margin="5" Click="BtnFiltroPendentes_Click"/>
                <Button Content="Pagos" Width="80" Margin="5" Click="BtnFiltroPagos_Click"/>
                <Button Content="Entregues" Width="80" Margin="5" Click="BtnFiltroEntregues_Click"/>
            </StackPanel>

            <!-- Botões de Status -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <Button Content="Marcar como Pago" Width="120" Margin="5" Click="BtnMarcarPago_Click"/>
                <Button Content="Marcar como Enviado" Width="120" Margin="5" Click="BtnMarcarEnviado_Click"/>
                <Button Content="Marcar como Recebido" Width="130" Margin="5" Click="BtnMarcarRecebido_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
