<Window x:Class="WpfApp.Views.ProdutoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cadastro de Produtos" Height="400" Width="600">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Inputs -->
            <RowDefinition Height="*"/>
            <!-- Grid de produtos -->
            <RowDefinition Height="Auto"/>
            <!-- Botões -->
        </Grid.RowDefinitions>

        <!-- Campos de Cadastro -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBox x:Name="txtNome" Width="150" Margin="5"/>
            <TextBox x:Name="txtCodigo" Width="100" Margin="5"/>
            <TextBox x:Name="txtValor" Width="100" Margin="5"/>
        </StackPanel>

        <!-- Grid com Produtos -->
        <DataGrid x:Name="dgProdutos" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionUnit="FullRow" Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="*"/>
                <DataGridTextColumn Header="Nome" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Código" Binding="{Binding Codigo}" Width="*"/>
                <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Botões -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="btnIncluir" Content="Incluir" Width="80" Margin="5" Click="btnIncluir_Click"/>
            <Button x:Name="btnEditar" Content="Editar" Width="80" Margin="5" Click="btnEditar_Click"/>
            <Button x:Name="btnSalvar" Content="Salvar" Width="80" Margin="5" Click="btnSalvar_Click"/>
            <Button x:Name="btnExcluir" Content="Excluir" Width="80" Margin="5" Click="btnExcluir_Click"/>
        </StackPanel>
    </Grid>
</Window>
