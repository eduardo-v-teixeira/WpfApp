<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema" Height="300" Width="400">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Content="Cadastro de Pessoas"
                    Width="200" Height="50" Margin="10"
                    Click="BtnAbrirPessoas_Click"/>
            <Button Content="Cadastro de Produtos"
                    Width="200" Height="50" Margin="10"
                    Click="BtnAbrirProdutos_Click"/>
            <Button Content="Cadastro de Pedidos"
                    Width="200" Height="50" Margin="10"
                    Click="BtnAbrirPedidos_Click"/>
        </StackPanel>
    </Grid>
</Window>
